{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TS Node with Nodemon",
      "runtimeExecutable": "nodemon",
      "program": "${workspaceFolder}/src/server.ts",
      "restart": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "runtimeArgs": [
        "--exec",
        "npx ts-node"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
